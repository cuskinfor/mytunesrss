<?xml version="1.0" encoding="UTF-8"?>

<project name="mytunesrss" basedir="." xmlns:artifact="antlib:org.apache.maven.artifact.ant">

    <target name="idea.after-compile" description="target to execute after compilation in idea">
        <copy todir="target/idea" overwrite="true">
            <fileset dir="etc">
                <include name="conf/**"/>
            </fileset>
        </copy>
        <mkdir dir="target/idea/webapps/ROOT/WEB-INF/classes"/>
        <copy todir="target/idea/webapps/ROOT/WEB-INF/classes" overwrite="true">
            <fileset dir="webapp/target/classes">
                <include name="**"/>
            </fileset>
        </copy>
        <artifact:dependencies filesetid="zislib">
            <artifact:dependency groupid="de.codewave" artifactid="codewave-zis" version="1.0"/>
        </artifact:dependencies>
        <copy todir="target/idea/lib" flatten="true">
            <fileset refid="zislib"/>
        </copy>
    </target>

    <target name="upload_website" description="upload website to shells24 server">
        <ftp server="server11a.dnshoster.de" userid="wtdmwq" password="${password}" remotedir="public_html/file-store">
            <fileset dir="target">
                <include name="*.zip"/>
            </fileset>
        </ftp>
    </target>

</project>
