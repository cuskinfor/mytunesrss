<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>windows</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>data/lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>target/${artifactId}-${version}.jar</source>
            <outputDirectory>data</outputDirectory>
            <destName>mytunesrss_remover.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <outputDirectory>data</outputDirectory>
            <directory>etc</directory>
            <includes>
                <include>java.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>etc</directory>
            <includes>
                <include>MyTunesRSSRemover.exe</include>
                <include>readme.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
