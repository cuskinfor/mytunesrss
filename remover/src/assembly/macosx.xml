<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>macosx</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>MyTunesRSSRemover.app/Contents/Resources/Java/lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>target/${artifactId}-${version}.jar</source>
            <outputDirectory>MyTunesRSSRemover.app/Contents/Resources/Java</outputDirectory>
            <destName>mytunesrss_remover.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <directory>etc/MacOS-Bundle</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/JavaApplicationStub*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory/>
            <directory>etc/MacOS-Bundle</directory>
            <includes>
                <include>**/JavaApplicationStub*</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory/>
            <directory>etc</directory>
            <includes>
                <include>readme.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
