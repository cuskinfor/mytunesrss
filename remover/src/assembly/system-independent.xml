<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>system-independent</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>target/mytunesrss-remover-${version}.jar</source>
            <outputDirectory/>
            <destName>mytunesrss-remover.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <outputDirectory/>
            <directory>etc</directory>
            <includes>
                <include>readme.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
