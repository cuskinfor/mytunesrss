<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>system-independent</id>
    <formats>
        <format>dir</format>
    </formats>
    <moduleSets>
        <moduleSet>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <includes>
                    <include>*:jar:*</include>
                </includes>
                <excludes>
                    <exclude>*:runtime:jar:*</exclude>
                </excludes>
            </binaries>
        </moduleSet>
        <moduleSet>
            <binaries>
                <outputFileNameMapping>mytunesrss.jar</outputFileNameMapping>
                <includes>
                    <include>*:runtime:jar:*</include>
                </includes>
            </binaries>
        </moduleSet>
        <moduleSet>
            <binaries>
                <outputFileNameMapping>ROOT.war</outputFileNameMapping>
                <outputDirectory>webapps</outputDirectory>
                <includes>
                    <include>*:war:*</include>
                </includes>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <directory>etc/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
