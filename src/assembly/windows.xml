<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>windows</id>
    <!--<formats>-->
        <!--<format>dir</format>-->
    <!--</formats>-->
    <moduleSets>
        <moduleSet>
            <binaries>
                <outputDirectory>data</outputDirectory>
                <outputFileNameMapping>mytunesrss.jar</outputFileNameMapping>
                <includes>
                    <include>*:runtime:jar:*</include>
                </includes>
            </binaries>
        </moduleSet>
        <moduleSet>
            <binaries>
                <outputDirectory>data/webapps</outputDirectory>
                <outputFileNameMapping>ROOT.war</outputFileNameMapping>
                <includes>
                    <include>*:war:*</include>
                </includes>
            </binaries>
        </moduleSet>
    </moduleSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>data</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>data/conf</outputDirectory>
            <directory>etc/conf</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>data</outputDirectory>
            <directory>etc</directory>
            <includes>
                <include>java.properties</include>
                <include>systray4j.dll</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>etc</directory>
            <includes>
                <include>MyTunesRSS.exe</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
