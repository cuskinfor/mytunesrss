<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>windows</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>*:runtime:jar:*</include>
            </includes>
            <binaries>
                <outputDirectory>data</outputDirectory>
                <outputFileNameMapping>mytunesrss.jar</outputFileNameMapping>
                <unpack>false</unpack>
                <includeDependencies>true</includeDependencies>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>data/lib</outputDirectory>
                        <includes>
                            <include>*:jar:*</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>*:war:*</include>
            </includes>
            <binaries>
                <outputDirectory>data/webapps</outputDirectory>
                <outputFileNameMapping>ROOT</outputFileNameMapping>
                <unpack>true</unpack>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>data/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>data</outputDirectory>
            <directory>etc</directory>
            <includes>
                <include>conf/**</include>
                <include>themes/**</include>
                <include>languages/**</include>
                <include>systray4j.dll</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>etc</directory>
            <includes>
                <include>MyTunesRSS.exe</include>
                <include>readme.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
