<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>distribution</id>
    <baseDirectory>mytunesrss-${version}</baseDirectory>
    <formats>
        <format>dir</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
            <excludes>
                <exclude>*:runtime:jar:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputFileNameMapping>mytunesrss.jar</outputFileNameMapping>
            <includes>
                <include>*:runtime:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputFileNameMapping>mytunesrss.war</outputFileNameMapping>
            <outputDirectory>webapps</outputDirectory>
            <includes>
                <include>*:war:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>../etc/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
